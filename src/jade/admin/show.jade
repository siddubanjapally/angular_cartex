h1(class="text-center") Show Product

form(class="form-horizontal", role="form")
  div(class="form-group")
    label(class="col-sm-2 control-label") Product ID
    div(class="col-sm-10")
      p(class="form-control-static", ng-bind="id")

  div(class="form-group")
    label(for="name", class="col-sm-2 control-label") Product Name
    div(class="col-sm-10")
      p(class="form-control-static", ng-bind="name")

  div(class="form-group")
    label(for="price", class="col-sm-2 control-label") Price
      p(class="form-control-static", ng-bind="price")

  div(class="form-group")
    label(for="name", class="col-sm-2 control-label") Description
      p(class="form-control-static", ng-bind="price")
